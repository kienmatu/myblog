<script>
    $(document).ready(function() {
        // Handle the toggle button click
        $(".btn-navbar").click(function(e) {
            e.preventDefault();
            e.stopPropagation(); // Stop the event from propagating

            var target = $($(this).data("target"));

            // Toggle the collapse state
            if(target.hasClass("in")) {
                target.removeClass("in").css("height", "0px");
            } else {
                target.addClass("in").css("height", "auto");
            }

            return false; // Additional measure to prevent default behavior
        });

        // Only close the menu when clicking outside navbar
        $(document).click(function(e) {
            // Check if the click was outside the navbar and the menu is open
            if(!$(e.target).closest('.navbar').length && $(".nav-collapse").hasClass("in")) {
                $(".nav-collapse").removeClass("in").css("height", "0px");
            }
        });

        // Handle active state for menu items
        $("#topMenu li a").click(function(e) {
            // Don't stop propagation here as we want the document click handler to work
            $("#topMenu li").removeClass("active");
            $(this).parent().addClass("active");
        });

        // Prevent clicks inside the menu from closing it
        $(".nav-collapse").click(function(e) {
            e.stopPropagation();
        });
    });
</script>
